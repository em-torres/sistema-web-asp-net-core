@using VS = Sistema.UserStrings.ViewStrings;
@model Sistema.Models.Categoria

@{
    ViewData["Title"] = VS.DeleteEsp;
}

<h2>@ViewData["Title"]</h2>

<h3>@VS.DeleteConfEsp</h3>
<div>
    <h4>@VS.ModCatNombre</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaID" />
        <input type="submit" value="@VS.DeleteEsp" class="btn btn-default" /> |
        <a asp-action="Index">@VS.BackIndexEsp</a>
    </form>
</div>
